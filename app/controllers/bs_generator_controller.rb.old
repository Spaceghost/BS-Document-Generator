class BsGeneratorController < ApplicationController
  def get_pdf
    Mime::Type.register "application/pdf", :pdf 
    output = BSReport.new.to_pdf

    respond_to do |format|
      format.pdf do
        send_data output, :filename => "hello.pdf", 
                          :type => "application/pdf"
      end
    end
  end

end

class BSReport < Prawn::Document
  def to_pdf
    text "Hello world"
    render
  end
end
